server {
  root /var/www/shibumi/app/packages/carton-printing/.next;

  listen 80;
  server_name app.shibumi.nixel.tech;
  access_log /var/log/nginx/app.shibumi.access.log;
  error_log /var/log/nginx/app.shibumi.error.log warn;

  location / {
      proxy_pass http://127.0.0.1:3000;

      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection 'upgrade';
      proxy_set_header Host $host;
      proxy_cache_bypass $http_upgrade;
  }
}